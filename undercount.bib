@article{maruottiEstimating2022,
  title = {Estimating the Undetected Infections in the {{Monkeypox}} Outbreak},
  author = {Maruotti, Antonello and Böhning, Dankmar and Rocchetti, Irene and Ciccozzi, Massimo},
